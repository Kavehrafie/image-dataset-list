{
  "name": "image-dataset-list",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for image dataset management tools and collections",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules/.cache",
    "publish:all": "npm run build && lerna publish",
    "dev:core": "npm run dev --workspace=packages/core",
    "dev:cli": "npm run dev --workspace=packages/cli",
    "install:all": "npm install",
    "bootstrap": "npm install && npm run build"
  },
  "devDependencies": {
    "lerna": "^8.0.0",
    "concurrently": "^8.2.0"
  },
  "author": "Kaveh Rafie <kaveh_rafie@yahoo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kavehrafie/image-dataset-list.git"
  },
  "bugs": {
    "url": "https://github.com/Kavehrafie/image-dataset-list/issues"
  },
  "homepage": "https://github.com/Kavehrafie/image-dataset-list#readme"
}
